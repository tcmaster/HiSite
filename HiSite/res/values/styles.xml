<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 首页下方四个单选按钮组 -->
    <style name="main_tab_bottom">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="line_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <style name="line_full_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_gray</item>
    </style>
    <!-- 通用编辑框样式 -->
    <style name="et_comm_style" parent="match">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 确定Button style -->
    <style name="ok_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/setting_btn_selector</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@drawable/setting_text_selector</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 商家资料的 左侧文本style -->
    <style name="shoptext_left_style" parent="wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middleTextSize</item>
        <item name="android:gravity">left</item>
    </style>
    <!-- 商家资料的 文本style -->
    <style name="shoptext_style" parent="match_width">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/middleTextSize</item>
    </style>
    <!-- 发活动通用线性布局条目样式 -->
    <style name="ll_comm_style" parent="match_width">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 发活动的 文本style -->
    <style name="createeventtext_style" parent="wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/middleTextSize</item>
    </style>
    <!-- 发活动的 小字的文本style -->
    <style name="createeventsmalltext_style" parent="wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- 设置与我的账号的item设置 -->
	<style name="myAccountItem">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/item_height_of_myaccount</item>
	</style>
</resources>