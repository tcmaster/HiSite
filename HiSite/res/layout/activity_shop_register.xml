<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/wrap"
                android:text="@string/phone"
                android:textSize="@dimen/middleTextSize" />

            <EditText
                android:id="@+id/et_phone_register"
                style="@style/et_comm_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/input_phone"
                android:inputType="phone"
                android:maxLength="11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/wrap"
                android:text="@string/auth_code"
                android:textSize="@dimen/middleTextSize" />

            <EditText
                android:id="@+id/et_code_register"
                style="@style/et_comm_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/input_code"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_code_register"
                style="@style/ok_button_style"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="@string/get_code"
                android:textColor="@drawable/setting_text_selector"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_password"
                android:textSize="@dimen/middleTextSize" />

            <EditText
                android:id="@+id/et_setpwd"
                style="@style/et_comm_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/input_wordcount"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tv_setpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_btn_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pwd_again"
                android:textSize="@dimen/middleTextSize" />

            <EditText
                android:id="@+id/et_setpwd_again"
                style="@style/et_comm_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/input_wordcount"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tv_setpwd_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_btn_selector" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_register_ok"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/sure" />
    </LinearLayout>

</ScrollView>