<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/match_width"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/match_width"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/black_half_transparent" />

        <TextView
            style="@style/wrap"
            android:text=" 或 " />

        <TextView
            style="@style/match_width"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/black_half_transparent" />
    </LinearLayout>

    <LinearLayout
        style="@style/match_width"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_wx_login_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/login_weixin"
            android:gravity="center"
            android:text="微信" />

        <TextView
            android:id="@+id/btn_qq_login_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/login_qq"
            android:gravity="center"
            android:text="QQ" />

        <com.sina.weibo.sdk.widget.LoginoutButton
            android:id="@+id/btn_sina_login_ok"
            style="@style/com_sina_weibo_sdk_loginview_default_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/login_weibo"
            android:gravity="center"
            android:text="微博" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_wx_login_cancel"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="微信登录注销" />

    <Button
        android:id="@+id/btn_qq_login_cancle"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="QQ登录注销" />

    <Button
        android:id="@+id/btn_sina_login_cancel"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="新浪微博注销" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="#80505050"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_back"
        style="@style/match_width"
        android:text="" >
    </TextView>

    <TextView>
    </TextView>

</LinearLayout>