<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_wx_login_ok"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/margin_between_item"
            android:text="微信登录" />

        <Button
            android:id="@+id/btn_wx_lgoin_cancel"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/margin_between_item"
            android:text="微信登录注销" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_qq_login_ok"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/margin_between_item"
            android:text="QQ登录" />

        <Button
            android:id="@+id/btn_qq_login_cancle"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/margin_between_item"
            android:text="QQ登录注销" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_sina_login_ok"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/margin_between_item" />

        <Button
            android:id="@+id/btn_sina_login_cancel"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/margin_between_item"
            android:text="微信注销" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_back"
        style="@style/match_width"
        android:text="" >
    </TextView>

</LinearLayout>