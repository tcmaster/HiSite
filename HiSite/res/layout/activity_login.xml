<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_wx_login_ok"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="微信登录" />

    <Button
        android:id="@+id/btn_wx_login_cancel"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="微信登录注销" />

    <Button
        android:id="@+id/btn_qq_login_ok"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="QQ登录" />

    <Button
        android:id="@+id/btn_qq_login_cancle"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="QQ登录注销" />

    <com.sina.weibo.sdk.widget.LoginoutButton
        android:id="@+id/btn_sina_login_ok"
        style="@style/com_sina_weibo_sdk_loginview_silver_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="新浪微博登录" />

    <Button
        android:id="@+id/btn_sina_login_cancel"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="新浪微博注销" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="#80505050"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_back"
        style="@style/match_width"
        android:text="" >
    </TextView>

</LinearLayout>