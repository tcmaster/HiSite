<?xml version="1.0" encoding="utf-8"?>
<com.android.tonight8.view.slidemenu.SlideMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
    style="@style/match"
    slidemenu:slideDirection="right" >

    <RelativeLayout
        style="@style/match"
        android:orientation="vertical"
        slidemenu:layout_role="content"
        >

        <ProgressBar
            android:id="@+id/pb_loading"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true" />

        <com.android.tonight8.view.xlistview.XListView
            android:id="@+id/lv_show_detail"
            style="@style/match"
            android:scrollbars="none" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lv_right"
        style="@style/match"
        android:orientation="vertical"
        slidemenu:layout_role="secondaryMenu"
        >

        <TextView
            android:id="@+id/tv_test"
            style="@style/wrap"
            android:text="@string/app_name"
            android:textSize="20sp" />
    </LinearLayout>

</com.android.tonight8.view.slidemenu.SlideMenu>