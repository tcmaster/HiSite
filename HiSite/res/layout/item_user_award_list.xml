<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_top"
        style="@style/match_width"
        android:background="@color/green"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            style="@style/wrap"
            android:layout_marginLeft="10dp"
            android:text="@string/award_no"
            android:textColor="@color/white"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            android:id="@+id/tv_award_no"
            style="@style/wrap"
            android:layout_marginLeft="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/match_width"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <include
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        layout="@layout/item_apply_histroy" />

    <View style="@style/line_full" />

    <LinearLayout
        style="@style/match_width"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_consult"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_consult"
                style="@style/wrap"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/wrap"
                android:gravity="center"
                android:text="@string/consult"
                android:textColor="@color/black"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View
            style="@style/line_full_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:id="@+id/ll_complain"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_complain"
                style="@style/wrap"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/wrap"
                android:gravity="center"
                android:text="@string/complain"
                android:textColor="@color/black"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View
            style="@style/line_full_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:id="@+id/ll_sign"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_sign"
                style="@style/wrap"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/wrap"
                android:gravity="center"
                android:text="@string/sign"
                android:textColor="@color/black"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View
            style="@style/line_full_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <View style="@style/line_full" />

    <ListView
        android:id="@+id/lv_commit"
        style="@style/match_width" />

</LinearLayout>