<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seletor_white_to_gray"
    android:orientation="vertical" >

    <View style="@style/line_full" />

    <LinearLayout
        android:padding="@dimen/common_margin_small"
        style="@style/match_width"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_enterlive"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:text="进入现场" />

        <View style="@style/line_full_vertical" />

        <TextView
            android:id="@+id/tv_mywish_edit"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:text="心愿制作" />

        <View style="@style/line_full_vertical" />

        <TextView
            android:id="@+id/tv_post_end"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发布结束" />
    </LinearLayout>

    <View style="@style/line_full" />

    <LinearLayout
        style="@style/match_width"
        android:layout_margin="@dimen/common_margin_small"
        android:orientation="horizontal" >

        <TextView
            style="@style/wrap"
            android:text="心愿主题:" />

        <TextView
            android:id="@+id/tv_mywishpost_theme"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:text="我要去西藏" />
    </LinearLayout>

    <LinearLayout
        style="@style/match_width"
        android:layout_margin="@dimen/common_margin_small"
        android:orientation="horizontal" >

        <TextView
            style="@style/wrap"
            android:text="支持人数:" />

        <TextView
            android:id="@+id/tv_support_count"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:text="20000" />
    </LinearLayout>

    <RelativeLayout
        style="@style/match_width"
        android:layout_margin="@dimen/common_margin_small" >

        <com.android.tonight8.view.MyProgressBar
            android:id="@+id/pb_mywish_progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_toRightOf="@+id/tv_mywish_progress"
            android_custom:roundColor="@color/white_gray"
            android_custom:roundProgressColor="@color/black_seven_purple"
            android_custom:roundWidth="4dip"
            android_custom:textColorRound="@color/black_seven_purple"
            android_custom:textIsDisplayable="true"
            android_custom:textSizeRound="14sp" />

        <CheckBox
            android:id="@+id/cb_check_sponsor"
            style="@style/wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/vblackarrow"
            android:drawablePadding="@dimen/common_margin_small"
            android:gravity="center_vertical"
            android:text="查看赞助"
            android:textColor="@color/black_seven_purple" />

        <TextView
            android:id="@+id/tv_mywish_progress"
            style="@style/wrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="实现进度:"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View style="@style/line_full" />

    <com.android.tonight8.view.ListViewForScrollView
        android:id="@+id/lv_mywish_listview"
        style="@style/match_width"
        android:visibility="gone" />

</LinearLayout>