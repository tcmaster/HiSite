    <View style="@style/line_full"
        android:layout_height="@dimen/common_margin_left_long" />
	<View style="@style/line_full"
        />
    <RadioGroup
        android:id="@+id/rg_detail_choice"
        style="@style/match_width"
        android:orientation="horizontal"
        android:background="@color/white" >

        <RadioButton
            android:id="@+id/rb_choice_award"
            style="@style/wrap"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:gravity="center"
            android:text="@string/awardIntroduce"
            android:textColor="@color/black"
            android:textSize="@dimen/smallTextSize"
            android:button="@null"
            android:padding="@dimen/topOrBottomPaddingSmall" />
        <RadioButton
            android:id="@+id/rb_choice_activity_q"
            style="@style/wrap"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:gravity="center"
            android:text="@string/activityQ"
            android:textColor="@color/black"
            android:textSize="@dimen/smallTextSize"
            android:button="@null"
            android:padding="@dimen/topOrBottomPaddingSmall" />
    </RadioGroup>
    <View style="@style/line_full"
        />
    <View style="@style/line_full"
        android:layout_height="@dimen/common_margin_left_long" />

</LinearLayout>