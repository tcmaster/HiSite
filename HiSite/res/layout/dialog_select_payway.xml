<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radius_corners"
    android:orientation="vertical"
    android:padding="@dimen/common_margin_left" >

    <TextView
        style="@style/wrap"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/common_margin_left_long"
        android:text="选择支付方式"
        android:textSize="@dimen/bigTextSize" />

    <View style="@style/line_full" />

    <LinearLayout
        android:id="@+id/rg_pay"
        style="@style/match_width"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_small" >

        <LinearLayout
            android:id="@+id/ll_weixinpay"
            style="@style/match_width"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin_left" >

            <ImageView
                style="@style/wrap"
                android:scaleType="fitXY"
                android:src="@drawable/weixin_logo" />

            <TextView
                android:id="@+id/rb_weixinpay"
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:gravity="center"
                android:text="微信"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View style="@style/line_full_vertical" />

        <LinearLayout
            android:id="@+id/ll_zhifubaopay"
            style="@style/match_width"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin_left" >

            <ImageView
                style="@style/wrap"
                android:scaleType="fitXY"
                android:src="@drawable/alipay" />

            <TextView
                android:id="@+id/rb_zhifubaopay"
                style="@style/wrap"
                android:text="支付宝"
                android:textSize="@dimen/middleTextSize"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>