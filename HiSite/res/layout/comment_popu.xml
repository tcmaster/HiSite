<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="40dp"
    android:background="@drawable/comment_bg"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/popu_praise"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/select_comment_left"
        android:drawableLeft="@drawable/vhearticon"
        android:gravity="center"
        android:padding="@dimen/common_margin_left"
        android:text="赞"
        android:textColor="#ffffffff"
        android:textSize="@dimen/middleTextSize" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#ffffffff" />

    <TextView
        android:id="@+id/popu_comment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/select_comment_right"
        android:gravity="center"
        android:padding="@dimen/common_margin_left"
        android:text="评论"
        android:textColor="#ffffffff"
        android:textSize="@dimen/middleTextSize" />

</LinearLayout>