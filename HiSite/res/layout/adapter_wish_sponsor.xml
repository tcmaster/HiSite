<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_orglogopic"
        android:layout_width="@dimen/user_headpic_minheight"
        android:layout_height="@dimen/user_headpic_minheight" />

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_wish_orgpname"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_left" />

        <TextView
            android:id="@+id/tv_moneycount"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_left" />

        <TextView
            android:id="@+id/tv_wish_orgrequest"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_left" />
    </LinearLayout>

</LinearLayout>