<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_small" >

        <TextView
            style="@style/wrap"
            android:paddingLeft="@dimen/common_margin_left"
            android:text="主持类型:卖手主持" />

        <TextView
            style="@style/match_width"
            android:gravity="right"
            android:paddingRight="@dimen/common_margin_left"
            android:text="邀请状态:已接收" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_comperehead_pic"
            android:layout_width="@dimen/popGoodsUserPhotoWidth"
            android:layout_height="@dimen/popGoodsUserPhotoWidth"
            android:contentDescription="@string/app_name"
            android:layout_margin="@dimen/common_margin_small"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_temp_compere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_comperehead_pic"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:text="主持人名称" >
            </TextView>

            <TextView
                style="@style/match_width"
                android:gravity="right"
                android:paddingRight="@dimen/common_margin_left"
                android:text="2015-05-06已认证" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_temp_compere2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_temp_compere"
            android:layout_toRightOf="@+id/iv_comperehead_pic" >

            <TextView
                style="@style/match_width"
                android:layout_weight="1"
                android:text="城市：北京" />

            <TextView
                style="@style/match_width"
                android:layout_weight="1"
                android:text="年龄：26" />

            <TextView
                style="@style/match_width"
                android:layout_weight="1"
                android:text="经验：2月" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_temp_compere2"
            android:layout_toRightOf="@+id/iv_comperehead_pic" >

            <TextView
                style="@style/match_width"
                android:layout_weight="1"
                android:text="主持：5场" />

            <TextView
                style="@style/match_width"
                android:layout_weight="1"
                android:text="观众：300人" />

            <TextView
                style="@style/match_width"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>