<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="3dip" >

        <ImageView
            android:id="@+id/iv_wish_themepic"
            style="@style/match_width"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/common_margin_left"
            android:background="@drawable/add_custom" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_cs_gallay_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rl_iv"
        android:layout_alignTop="@+id/rl_iv"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dip"
        android:background="@drawable/delete_picture" />

</RelativeLayout>