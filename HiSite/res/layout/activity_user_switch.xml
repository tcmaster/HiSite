<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_top"
        style="@style/match_width"
        android:background="@color/green"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/topOrbottomPadding"
        android:paddingTop="@dimen/topOrbottomPadding" >

        <TextView
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:text="@string/award_no"
            android:textColor="@color/white"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            android:id="@+id/tv_award_no"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/match_width"
            android:layout_marginRight="@dimen/common_margin_left"
            android:gravity="right"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <RelativeLayout
        style="@style/match_width"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" >

        <FrameLayout
            android:id="@+id/fl_left_pic"
            style="@style/wrap"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/common_margin_left" >

            <ImageView
                android:id="@+id/iv_pop_goods_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/iv_pop_goods_pic_left_top"
                style="@style/wrap"
                android:layout_gravity="left|top"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />
        </FrameLayout>

        <LinearLayout
            style="@style/match_width"
            android:layout_alignTop="@id/fl_left_pic"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginRight="@dimen/common_margin_left"
            android:layout_toRightOf="@id/fl_left_pic"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/match_width"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_event_name"
                    style="@style/wrap"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigTextSize" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/match_width"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/smallTextSize" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_width"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap"
                    android:text="@string/publish2"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_org_name"
                    style="@style/wrap"
                    android:layout_marginLeft="@dimen/common_margin_small"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_width"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap"
                    android:text="@string/award"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_pop_goods"
                    style="@style/wrap"
                    android:layout_marginLeft="@dimen/common_margin_small"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_award_value"
                    style="@style/match_width"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/smallTextSize" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_width"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap"
                    android:text="@string/award_count"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_provide_num"
                    style="@style/wrap"
                    android:layout_marginLeft="@dimen/common_margin_small"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_width"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap"
                    android:text="@string/coupon"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_coupon"
                    style="@style/wrap"
                    android:layout_marginLeft="@dimen/common_margin_small"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />
            </LinearLayout>

            <RelativeLayout
                style="@style/match_width"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_have_apply_left"
                    style="@style/wrap"
                    android:layout_centerVertical="true"
                    android:text="@string/have_apply"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_have_apply"
                    style="@style/wrap"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_have_apply_left"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/smallTextSize" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/match_width"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:hint="@string/user_account_init"
            android:inputType="text" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:src="@drawable/search_red" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_contacts"
        style="@style/ok_button_style"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/topOrbottomPadding"
        android:paddingLeft="@dimen/common_margin_small"
        android:paddingRight="@dimen/common_margin_small"
        android:text="@string/search_from_contacts" />

    <LinearLayout
        android:id="@+id/ll_friends"
        style="@style/wrap"
        android:orientation="vertical"
        android:padding="@dimen/topOrbottomPadding"
        android:layout_gravity="center_horizontal"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_user_photo"
            style="@style/wrap"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_friends_name"
            style="@style/wrap"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/middleTextSize" />
    </LinearLayout>

</LinearLayout>