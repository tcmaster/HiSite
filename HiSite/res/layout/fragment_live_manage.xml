<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_live_manage"
        style="@style/match_width"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_left" >

        <RadioButton
            android:id="@+id/rb_live_manage1"
            style="@style/wrap"
            android:background="@drawable/selector_orangetowhite_left_corner"
            android:button="@null"
            android:checked="true"
            android:padding="@dimen/common_margin_small"
            android:text="绑定小二" />

        <RadioButton
            android:id="@+id/rb_live_manage2"
            style="@style/wrap"
            android:background="@drawable/seletor_orangetowhite"
            android:button="@null"
            android:padding="@dimen/common_margin_small"
            android:text="发起投票" />

        <RadioButton
            android:id="@+id/rb_live_manage3"
            style="@style/wrap"
            android:background="@drawable/selector_orangetowhite_right_corner"
            android:button="@null"
            android:padding="@dimen/common_margin_small"
            android:text="发布公告" />
    </RadioGroup>

</LinearLayout>