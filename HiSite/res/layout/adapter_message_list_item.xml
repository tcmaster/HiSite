<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/common_margin_left" >

    <ImageView
        android:id="@+id/iv_org_logopic"
        style="@style/wrap"
        android:background="@drawable/ic_launcher" >
    </ImageView>

    <RelativeLayout
        style="@style/match_width"
        android:layout_weight="1"
        android:padding="@dimen/common_margin_small" >

        <LinearLayout
            android:id="@+id/ll_temp"
            style="@style/match_width"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_message_type"
                style="@style/wrap"
                android:text="消息类型"
                android:textColor="@color/half_black" />

            <TextView
                android:id="@+id/tv_message_title"
                style="@style/wrap"
                android:layout_weight="1"
                android:paddingLeft="@dimen/common_margin_small"
                android:text="消息标题"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_message_datetime"
                style="@style/wrap"
                android:text="消息日期时间"
                android:textColor="@color/half_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_message_content"
            style="@style/wrap"
            android:layout_below="@+id/ll_temp"
            android:text="消息内容 "
            android:maxLines="2"
            android:textColor="@color/half_black" />
    </RelativeLayout>

    <ImageView
        style="@style/wrap"
        android:background="@drawable/ic_launcher" >
    </ImageView>

</LinearLayout>