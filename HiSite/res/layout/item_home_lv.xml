<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:layout_margin="@dimen/common_margin_small"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_top"
        style="@style/match_width"
        android:orientation="horizontal"
        android:layout_margin="@dimen/common_margin_small" >

        <FrameLayout style="@style/wrap"
            android:layout_marginRight="@dimen/common_margin_small"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_bpic"
                android:layout_width="108dp"
                android:layout_height="108dp"
                
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/label_genuine" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            style="@style/match_width"
            android:layout_marginBottom="@dimen/common_margin_small"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout style="@style/match_width" >

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/wrap"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/wrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/middleTextSize" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_company"
                style="@style/wrap"
                android:layout_marginLeft="10dp"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                android:id="@+id/tv_prize"
                style="@style/wrap"
                android:layout_marginLeft="10dp"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                android:id="@+id/tv_count"
                style="@style/wrap"
                android:layout_marginLeft="10dp"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />

            <RelativeLayout style="@style/match_width" >

                <TextView
                    android:id="@+id/tv_redpacket"
                    style="@style/wrap"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/middleTextSize" />

                <TextView
                    android:id="@+id/tv_signup_count"
                    style="@style/wrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/middleTextSize" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_full" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        style="@style/match_width"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_win"
            style="@style/wrap"
            android:paddingTop="@dimen/topOrbottomPadding"
            android:paddingBottom="@dimen/topOrbottomPadding"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_win"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/drawable_padding"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/star_red_small" />

            <TextView
                android:id="@+id/tv_win"
                style="@style/wrap"
                android:text="@string/win"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View style="@style/line_full_vertical" />

        <LinearLayout
            android:id="@+id/ll_comment"
            style="@style/wrap"
            android:paddingTop="@dimen/topOrbottomPadding"
            android:paddingBottom="@dimen/topOrbottomPadding"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/drawable_padding"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/talk_red" />

            <TextView
                android:id="@+id/tv_comment"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View style="@style/line_full_vertical" />

        <LinearLayout
            android:id="@+id/ll_apply"
            style="@style/wrap"
            android:paddingTop="@dimen/topOrbottomPadding"
            android:paddingBottom="@dimen/topOrbottomPadding"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_apply"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/drawable_padding"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/speople_red" />

            <TextView
                android:id="@+id/tv_apply"
                style="@style/wrap"
                android:text="@string/signin"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>