<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/common_margin_small"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_show_more_info"
        style="@style/match_width"
        android:background="@color/gray" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/wrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/bigTextSize" />

        <ImageView
            android:id="@+id/iv_arrow"
            style="@style/wrap"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_left"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/match_width"
        android:id="@+id/ll_info"
        android:visibility="gone" >
        <ProgressBar 
            android:id="@+id/pb_program_loading"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <com.android.tonight8.view.ListViewForScrollView
            android:id="@+id/lv_prgram"
            style="@style/match_width" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        style="@style/match_width"
        android:layout_margin="@dimen/common_margin_small"
        android:orientation="horizontal" >

        <FrameLayout
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_margin_small" >

            <ImageView
                android:id="@+id/iv_bpic"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/label_genuine" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginBottom="@dimen/common_margin_small"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_awards"
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                android:id="@+id/tv_prize"
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/topOrbottomPadding"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                android:id="@+id/tv_count"
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/topOrbottomPadding"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                android:id="@+id/tv_sign"
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/topOrbottomPadding"
                android:text="@string/app_name"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_full" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        style="@style/match_width"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_win"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/topOrbottomPadding"
            android:paddingTop="@dimen/topOrbottomPadding" >

            <ImageView
                android:id="@+id/iv_win"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/drawable_padding"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/star_red_small" />

            <TextView
                android:id="@+id/tv_win"
                style="@style/wrap"
                android:text="@string/win"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>

        <View style="@style/line_full_vertical" />

        <LinearLayout
            android:id="@+id/ll_apply"
            style="@style/wrap"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/topOrbottomPadding"
            android:paddingTop="@dimen/topOrbottomPadding" >

            <ImageView
                android:id="@+id/iv_apply"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/drawable_padding"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/speople_red" />

            <TextView
                android:id="@+id/tv_apply"
                style="@style/wrap"
                android:text="@string/signin"
                android:textSize="@dimen/middleTextSize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>