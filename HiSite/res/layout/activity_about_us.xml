<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match"
    tools:context=".AboutUsActivity" >

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/match_width"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/iv_com_logo"
                style="@style/wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_title_top"
                style="@style/wrap"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@id/iv_com_logo"
                android:layout_toRightOf="@id/iv_com_logo"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/middleTextSize" />

            <TextView
                android:id="@+id/tv_publish"
                style="@style/wrap"
                android:layout_below="@id/tv_title_top"
                android:layout_alignLeft="@id/tv_title_top"
                android:layout_marginTop="1dp"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:textSize="@dimen/smallTextSize" />
            <TextView
                android:id="@+id/tv_attention"
                style="@style/wrap"
                android:layout_below="@id/tv_title_top"
                android:layout_toRightOf="@id/tv_publish"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="3dp"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:textSize="@dimen/smallTextSize" />
            <TextView
                android:id="@+id/tv_location"
                style="@style/wrap"
                android:layout_below="@id/tv_publish"
                android:layout_alignLeft="@id/tv_title_top"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="@dimen/smallTextSize"
                />
        </RelativeLayout>
       	<LinearLayout 
       	    style="@style/match_width"
       	    android:orientation="vertical"
       	    android:background="@color/white"
       	    >
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_name"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_introduce"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_introduce"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_address"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_address"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_contact"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_contact"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_phone"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_phone"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_net_address"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_net_address"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_email"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_email"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_weibo"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_weibo"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_weixin"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_weixin"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	    <ImageView 
       	        android:id="@+id/iv_qd_code"
       	        android:layout_width="80dp"
       	        android:layout_height="80dp"
       	        android:scaleType="fitXY"
       	        android:background="@color/gray"
       	        android:contentDescription="@string/app_name"
       	        android:layout_marginLeft="82dp"/>
       	    <LinearLayout 
       	        style="@style/match_width"
       	        android:orientation="horizontal"
       	        android:paddingTop="5dp"
       	        android:paddingBottom="5dp">
       	        <TextView
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/company_other"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	        <TextView
       	            android:id="@+id/tv_company_other"
       	            style="@style/wrap"
       	            android:layout_marginLeft="10dp"
       	            android:text="@string/app_name"
       	            android:textColor="@color/black"
       	            android:textSize="@dimen/middleTextSize"
       	            />
       	    </LinearLayout>
       	</LinearLayout>
    </LinearLayout>

</ScrollView>