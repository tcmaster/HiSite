<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical"
    android:background="@color/white" >

    <EditText
        android:id="@+id/et_user_id"
        style="@style/match_width"
        android:layout_margin="@dimen/common_margin_left"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:hint="@string/user_account_init"
        android:inputType="text"
        android:textSize="@dimen/middleTextSize" />

    <EditText
        android:id="@+id/et_user_loginpwd"
        style="@style/match_width"
        android:layout_marginBottom="@dimen/common_margin_left"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:hint="@string/input_pwd_hint"
        android:inputType="textPassword"
        android:textSize="@dimen/middleTextSize" />

    <EditText
        android:id="@+id/et_user_loginpwd_retry"
        style="@style/match_width"
        android:layout_marginBottom="@dimen/common_margin_left"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:hint="@string/input_pwd_hint_retry"
        android:inputType="textPassword"
        android:textSize="@dimen/middleTextSize" />

    <LinearLayout
        style="@style/match_width"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/input_code"
            android:paddingBottom="@dimen/topOrbottomPadding"
            android:paddingTop="@dimen/topOrbottomPadding"
            android:inputType="phone" />

        <Button
            android:id="@+id/btn_verify_code"
            style="@style/ok_button_style"
            android:layout_width="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/get_code"
            android:layout_weight="2"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/ok_button_style"
        android:layout_marginTop="@dimen/margin_between_item"
        android:text="@string/register" />

</LinearLayout>