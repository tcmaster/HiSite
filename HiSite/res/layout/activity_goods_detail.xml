<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match" >

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical" >

        <FrameLayout style="@style/match_width" >

            <ImageView
                android:id="@+id/iv_commodity_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_fg_left_top"
                style="@style/wrap"
                android:layout_gravity="left|top"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_fg_right_top"
                style="@style/wrap"
                android:layout_gravity="right|top"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_fg_right_bottom"
                style="@style/wrap"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </FrameLayout>

        <View style="@style/line_full" />

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:text="@string/toOpenAward"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hour"
                style="@style/wrap"
                android:background="@color/black"
                android:padding="2dp"
                android:text="@string/defaultTime"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                style="@style/wrap"
                android:padding="2dp"
                android:text="@string/hour"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/minute"
                style="@style/wrap"
                android:background="@color/black"
                android:padding="2dp"
                android:text="@string/defaultTime"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                style="@style/wrap"
                android:padding="2dp"
                android:text="@string/minute"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/second"
                style="@style/wrap"
                android:background="@color/black"
                android:padding="2dp"
                android:text="@string/defaultTime"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                style="@style/wrap"
                android:padding="2dp"
                android:text="@string/second"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signup_Count"
                style="@style/match_width"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                android:text="@string/defaultTime"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_full" />

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/activityTheme"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_theme"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/red" />
        </LinearLayout>

        <View style="@style/line_full" />

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/ll_company" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/sponsor"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_company"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/gray" />
        </LinearLayout>

        <View style="@style/line_full" />

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/coupon"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_coupon"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_coupleCount"
                style="@style/match_width"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="@string/couponCount"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_full" />

        <TextView
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginTop="5dp"
            android:text="@string/activityDetail"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View style="@style/line_full" />

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/activityAward"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_activity_detail"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/couponCount"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_goods_count"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/activityTime"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_activity_time"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/activityLocation"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_activity_location"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_see_location"
                style="@style/match_width"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="@string/app_name"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/wrap"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:text="@string/activityRule"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_activity_rule"
                style="@style/wrap"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_full" />

        <View
            style="@style/line_full"
            android:layout_marginTop="15dp" />

        <LinearLayout
            style="@style/match_width"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_choice_award"
                style="@style/wrap"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/awardIntroduce"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View style="@style/line_full_vertical" />

            <TextView
                android:id="@+id/tv_choice_activity_q"
                style="@style/wrap"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/activityQ"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/line_full" />
        <!-- 这个fragment用来存放两个fragment，左边是奖品介绍，右边是活动咨询 -->

        <LinearLayout
            android:id="@+id/ll_tab_container"
            style="@style/match_width"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@color/red" />

        <LinearLayout
            style="@style/match_width"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_commit"
                style="@style/wrap"
                android:layout_weight="1"
                android:text="@string/commit"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_signup"
                style="@style/wrap"
                android:layout_weight="9"
                android:background="@color/red"
                android:text="@string/signup"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>