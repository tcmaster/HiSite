<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_pulishtime"
        style="@style/match_width"
        android:layout_marginBottom="@dimen/common_margin_small"
        android:background="@color/half_white" />

    <TextView
        android:id="@+id/tv_event_name"
        style="@style/wrap"
        android:layout_below="@+id/tv_pulishtime"
        android:layout_marginBottom="@dimen/common_margin_small"
        android:layout_toRightOf="@+id/iv_event_headpic"
        android:text="小米公司免费送手机" />

    <TextView
        android:id="@+id/tv_goods_name"
        style="@style/wrap"
        android:layout_below="@+id/tv_event_name"
        android:layout_toRightOf="@+id/iv_event_headpic"
        android:text="红米note4" />

    <TextView
        android:id="@+id/tv_goods_count"
        style="@style/wrap"
        android:layout_alignBaseline="@+id/tv_goods_name"
        android:layout_alignBottom="@+id/tv_goods_name"
        android:layout_toRightOf="@+id/tv_goods_name"
        android:paddingLeft="5dp"
        android:text="共5布"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_goods_pricevalue"
        style="@style/wrap"
        android:layout_alignBaseline="@+id/tv_goods_count"
        android:layout_alignBottom="@+id/tv_goods_count"
        android:layout_toRightOf="@+id/tv_goods_count"
        android:paddingLeft="5dp"
        android:text="价值:699元/部" />

    <TextView
        android:id="@+id/tv_event_plan_time"
        style="@style/wrap"
        android:layout_below="@+id/tv_goods_name"
        android:layout_marginBottom="@dimen/common_margin_small"
        android:layout_marginTop="@dimen/common_margin_small"
        android:layout_toRightOf="@+id/iv_event_headpic"
        android:text="活动时间:2015-01-12至2015-12-12" />

    <LinearLayout
        style="@style/match_width"
        android:layout_below="@+id/tv_event_plan_time"
        android:layout_toRightOf="@+id/iv_event_headpic"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_event_comment_count"
            style="@style/shoptext_left_style"
            android:layout_weight="1"
            android:text="飞洒" />

        <TextView
            android:id="@+id/tv_event_signup_count"
            style="@style/shoptext_left_style"
            android:layout_weight="1"
            android:text="飞洒" />

        <TextView
            android:id="@+id/tv_event_award_count"
            style="@style/shoptext_left_style"
            android:layout_weight="1"
            android:text="飞洒" />

        <Button
            android:id="@+id/btn_awardlist"
            style="@style/ok_button_style"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="查看中奖名单"
            android:textSize="@dimen/smallTextSize" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_event_headpic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/common_margin_small"
        android:background="@drawable/ic_launcher" />

</RelativeLayout>