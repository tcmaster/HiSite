<?xml version="1.0" encoding="utf-8"?>
<!-- 通用actionBar -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:background="@color/red_sys"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/homelayout"
        style="@style/match_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/arrow"
            style="@style/wrap"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/logo"
            style="@style/wrap"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        style="@style/match"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/wrap"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/bigTextSize" />

        <TextView
            android:id="@+id/tv_title_right"
            style="@style/wrap"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_toRightOf="@id/tv_title"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize" />
    </RelativeLayout>

    <LinearLayout
        style="@style/match_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rightText"
            style="@style/wrap"
            android:layout_marginRight="@dimen/drawable_padding"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="@dimen/middleTextSize" />

        <ImageView
            android:id="@+id/rightimg"
            style="@style/wrap"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/m_action_right" />
    </LinearLayout>

</RelativeLayout>