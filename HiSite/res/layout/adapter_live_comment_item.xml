<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_left"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_live_comment_headpic"
        style="@style/wrap"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_live_comment_name"
        style="@style/wrap"
        android:layout_toRightOf="@+id/iv_live_comment_headpic"
        android:text="小新"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_live_comment_titlename"
        style="@style/wrap"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_live_comment_name"
        android:text="小新" >
    </TextView>

    <TextView
        android:id="@+id/tv_live_comment_date"
        style="@style/wrap"
        android:layout_alignLeft="@+id/tv_live_comment_title"
        android:layout_below="@+id/tv_live_comment_content"
        android:text="2014-11-27 12:15:47" />

    <TextView
        android:id="@+id/tv_live_comment_content"
        style="@style/wrap"
        android:layout_alignLeft="@+id/tv_live_comment_title"
        android:layout_below="@+id/tv_live_comment_title"
        android:layout_centerVertical="true"
        android:text="阿文分为阿泰gear哇嘎嘎嘎尔sagaerwge额外发个rage让广发额外人噶人噶尔方法" />

</RelativeLayout>