<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width" >

    <LinearLayout
        style="@style/match_width"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            style="@style/match"
            android:gravity="left"
            android:padding="@dimen/common_margin_left"
            android:text="适合企业进行认证，需提供营业执照，负责人身份证的照片"
            android:textSize="@dimen/smallTextSize" />

        <RelativeLayout
            android:id="@+id/rl_org_license"
            style="@style/wrap"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/common_margin_left" >

            <ImageView
                android:id="@+id/iv_org_license"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_launcher"
                android:scaleType="centerCrop" />

            <TextView
                style="@style/wrap"
                android:layout_alignLeft="@+id/iv_org_license"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/iv_org_license"
                android:background="@color/half_black"
                android:gravity="center_horizontal"
                android:text="点击上传营业执照"
                android:textColor="@color/white"
                android:textSize="@dimen/more_smallTextSize" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            style="@style/match_width"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin_left" >

            <RelativeLayout
                android:id="@+id/rl_identity_front"
                style="@style/wrap"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:padding="@dimen/common_margin_left" >

                <ImageView
                    android:id="@+id/iv_identity_front"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_launcher"
                    android:scaleType="centerCrop" />

                <TextView
                    style="@style/wrap"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/iv_identity_front"
                    android:background="@color/half_black"
                    android:gravity="center_horizontal"
                    android:text="上传法人身份证图(正)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/more_smallTextSize" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_identity_reverse"
                style="@style/wrap"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:padding="@dimen/common_margin_left" >

                <ImageView
                    android:id="@+id/iv_identity_reverse"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_launcher"
                    android:scaleType="centerCrop" />

                <TextView
                    style="@style/wrap"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/iv_identity_reverse"
                    android:background="@color/half_black"
                    android:gravity="center_horizontal"
                    android:text="上传法人身份证图(反)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/more_smallTextSize" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_auth_ok"
            style="@style/ok_button_style"
            android:layout_marginTop="@dimen/common_margin_left"
            android:text="确认提交" >
        </Button>
    </LinearLayout>

</ScrollView>