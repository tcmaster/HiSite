<?xml version="1.0" encoding="utf-8"?>
<!-- 虚线 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line" >

    <!-- dashWidth破折线的宽度,破折线之间的空隙的宽度为dashGap -->
    <stroke
        android:dashGap="2dp"
        android:dashWidth="3dp"
        android:width="1dp"
        android:color="#660a0204" />
    <!-- 虚线的高度 -->
    <size android:height="1dp" />

</shape>