<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 有焦点，没按下 -->
    <item android:state_enabled="true" android:state_focused="true" android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- stroke：描边 -->
            <stroke android:width="1dip" android:color="@color/half_black" />

            <!-- 填充的颜色 -->
            <solid android:color="@color/half_black" />
            <!-- 设置矩形的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp" />
        </shape></item>
    <!-- 有焦点，按下了 -->
    <item android:state_enabled="true" android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- stroke：描边 -->
            <stroke android:width="1dip" android:color="@color/half_black" />

            <!-- 填充的颜色 -->
            <solid android:color="@color/half_black" />
            <!-- 设置矩形的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp" />
        </shape></item>
    <!-- 有焦点 -->
    <item android:state_checked="true" android:state_enabled="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- stroke：描边 -->
            <stroke android:width="1dip" android:color="@color/half_black" />

            <!-- 填充的颜色 -->
            <solid android:color="@color/half_black" />
            <!-- 设置矩形的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp" />
        </shape></item>
    <!-- 默认 -->
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- stroke：描边 -->
            <stroke android:width="1dip" android:color="@color/half_black" />

            <!-- 填充的颜色 -->
            <solid android:color="@color/white" />
            <!-- 设置矩形的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp" />
        </shape></item>

</selector>